<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyd.vbloglearn.modules.mapper.RolesMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wyd.vbloglearn.modules.model.Roles">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="getRolesByUserId" resultMap="BaseResultMap">
        SELECT r.*
        FROM roles r ,roles_user ru
        WHERE ru.`uid` = #{userId} and r.`id` = ru.`rid`
    </select>
</mapper>
